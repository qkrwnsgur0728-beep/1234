<Window x:Class="AMPManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AMPManager.ViewModel"
        xmlns:v="clr-namespace:AMPManager.View"
        
        Title="AMP Manager" 
        Height="900" Width="1600"
        
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource AppBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="{StaticResource PanelBackground}">
            <DockPanel LastChildFill="False">

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="계측 모니터링 시스템" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="{StaticResource AccentColor}"/>

                    <Border Background="#3A3A4A" CornerRadius="15" Margin="20,0,0,0" Padding="15,5">
                        <TextBlock Text="{Binding UserRoleDisplay}" 
                                   Foreground="#E0E0E0" FontSize="14" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="20,0">

                    <Button Content="시스템 시작" Command="{Binding StartCommand}" 
                            Width="100" Height="36" Background="{StaticResource AccentColor}" 
                            Foreground="White" BorderThickness="0" FontWeight="Bold" Margin="0,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="재가동" Command="{Binding RestartCommand}" 
                            Visibility="{Binding StatTabVisibility}"
                            Width="100" Height="36" Background="#FFB300" 
                            Foreground="White" BorderThickness="0" FontWeight="Bold" Margin="0,0,10,0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>

                    <Button Content="정지" Command="{Binding StopCommand}" 
                            Width="100" Height="36" Background="#E53935" 
                            Foreground="White" 
                            BorderThickness="0" FontWeight="Bold">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center" Margin="0,0,40,0">
                    <TextBlock Text="가동 시간 : " Foreground="#B0B0B0" FontSize="16" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding OperationTimeDisplay}" 
                               Foreground="#00C1D4" FontSize="24" FontWeight="Bold" 
                               FontFamily="Consolas, Courier New" VerticalAlignment="Center" Margin="5,0,0,0"/>
                </StackPanel>

            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Background="#252530">

                <Button Content="HOME" Command="{Binding NavigateCommand}" CommandParameter="Main">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavBtnStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentViewModel}" Value="{x:Type vm:HomeViewModel}">
                                    <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Background" Value="#2F2F3D"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="LOG" Command="{Binding NavigateCommand}" CommandParameter="Log">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavBtnStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentViewModel}" Value="{x:Type vm:LogViewModel}">
                                    <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Background" Value="#2F2F3D"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="STAT" Command="{Binding NavigateCommand}" CommandParameter="Statistics"
                        Visibility="{Binding StatTabVisibility}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavBtnStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CurrentViewModel}" Value="{x:Type vm:StatisticsViewModel}">
                                    <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Background" Value="#2F2F3D"/>
                                    <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                    <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </StackPanel>

            <Border Grid.Column="1" Background="Transparent" Padding="0">
                <ContentControl Content="{Binding CurrentViewModel}"/>
            </Border>
        </Grid>
    </Grid>
</Window>